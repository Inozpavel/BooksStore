@model BooksStore.Models.Book
@{
    ViewBag.Title = "Изменение книги";
}
<form method="post">
    <div class="form-group">
        <label asp-for="Name"></label>
        <input asp-for="Name" class="form-control" type="text" value="@Model?.Name"/>
        <span class="text-danger small" asp-validation-for="Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Author.Name"></label>
        <input asp-for="Author.Name" class="form-control" type="text" value="@Model?.Author.Name"/>
        <span class="text-danger small" asp-validation-for="Author.Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Category.Name"></label>
        <input asp-for="Category.Name" class="form-control" type="text" value="@Model?.Category.Name"/>
        <span class="text-danger small" asp-validation-for="Category.Name"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description"></label>
        <input asp-for="Description" class="form-control" type="text" value="@Model?.Description"/>
    </div>

    <div class="row mt-3">
        <button class="btn ml-3 btn-lg btn-primary"type="submit">@ViewBag.MainButtonText</button>
        <a class="btn ml-3 btn-lg btn-outline-dark" asp-action="AllBooks">Отменить</a>
    </div>
</form>