@model BooksStore.Models.Category

@if (TempData["ErrorMessage"] != null)
{
    <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
}
<form method="post">
    <input asp-for="Id" type="hidden" value="@Model?.Id" />
    <div class="form-group ml-3 mr-3">
        <label class="ml-1" asp-for="Name"></label>
        <input asp-for="Name" class="form-control" type="text" value="@Model?.Name" autofocus />
        <span class="text-danger small" asp-validation-for="Name"></span>
    </div>
    <div class="form-group ml-3 mr-3">
        <label class="ml-1" asp-for="Description"></label>
        <input asp-for="Description" class="form-control" type="text" value="@Model?.Description" />
    </div>

    <div class="row mt-3">
        <button class="btn ml-3 btn-lg btn-primary" type="submit">@ViewBag.ButtonText</button>
        <a class="btn ml-3 btn-lg btn-outline-warning" asp-action="AllCategories">Отменить</a>
    </div>
</form>