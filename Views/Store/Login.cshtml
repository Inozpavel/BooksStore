@{
    Layout = null;
}
<html xmlns="http://www.w3.org/1999/xhtml">
<head>
    <title>Вход в аккаунт</title>
    <link rel="stylesheet" href="~/lib/bootstrap/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/FormStyle.css" />
</head>
<body class="text-center">
    <main class="text-center">
        <h1 class="h3 mb-3">Введите данные</h1>
        <form method="post" class="form-signin">
            <div class="form-group">
                <input class="form-control" type="email" placeholder="Email" />
            </div>
            <div class="form-group">
                <input class="form-control" type="password" placeholder="Пароль" />
            </div>
            <div class="form-group">
                <input type="checkbox" />
                <label>Запомнить меня</label>
            </div>
            <button class="btn btn-outline-success form-control" type="submit">Войти</button>
        </form>
        <p class="mt-5">или</p>
        <a class="btn btn-primary btn-block" asp-action="Registration">Регистрация</a>
    </main>
    <script src="~/js/InputsValidation.js?v=1.0"></script>
</body>
</html>