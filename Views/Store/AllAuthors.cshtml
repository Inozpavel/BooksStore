@model IEnumerable<BooksStore.Models.Author>
@{
    ViewBag.Title = "Список всех авторов";
}

<div class="btn-group ml-3 mt-3" role="group" aria-label="Basic example">
    <a class="btn btn-secondary" asp-action="AllBooks">Книги</a>
    <a class="btn btn-warning active" asp-action="AllAuthors">Авторы</a>
    <a class="btn btn-secondary" asp-action="AllCategories">Жанры</a>
</div>
<div class="text-center">
    <h1>Список всех авторов</h1>
</div>
@if (TempData["DeletedElementMessage"] != null)
{
    <div class="alert alert-success">@TempData["DeletedElementMessage"] </div>
}
@if (Model.Any() == false)
{
    <div class="text-center mt-5">
        <h3>Авторов нет</h3>
    </div>
}
else
{
<table class="table table-bordered table-hover">
    <thead class="thead-dark">
        <tr>
            <th>Id</th>
            <th class="text-center">Имя</th>
            @if (Model.Any(author => author.Description != null))
            {
                <th>Описание</th>
            }
            <th class="text-center mr-5">Управление</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var author in Model)
        {
            <tr>
                <td>@author.Id</td>
                <td class="text-center">@author.Name</td>
                @if (Model.Any(author => author.Description != null))
                {
                    <td>@author.Description</td>
                }
                <td>
                    <div class="row float-right">
                        <a class="btn btn-primary ml-3" asp-action="ChangeAuthor" asp-route-authorId="@author.Id">Изменить</a>
                        <a class="btn btn-danger ml-3 mr-5" type="submit" asp-action="RemoveAuthor" asp-route-authorId="@author.Id">Удалить</a>
                    </div>
                </td>
            </tr>
        }
    </tbody>
</table>
}
<div class="text-center mt-5">
    <a class="btn-primary btn-lg" asp-action="AddAuthor">Добавить автора</a>
</div>