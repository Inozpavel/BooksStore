@model BooksStore.Models.UserLogin
@{ 
    ViewBag.Title = "Вход в аккаунт";
}
<form method="post" class="form-signin text-center">
    <h1 class="h3 mb-3">Введите данные</h1>
    <div asp-validation-summary="All"></div>
    <div class="mt-3 form-group">
        <input asp-for="Email" class="form-control" type="email" placeholder="Email" />
    </div>
    <div class="mt-3 form-group">
        <input asp-for="Password" class="form-control" type="password" placeholder="Пароль" />
    </div>
    <div class="mt-3 form-check form-group ms-auto me-auto">
        <input type="checkbox" asp-for="ShouldRememberUser" class="form-check-input">
        <label class="form-check-label" asp-for="ShouldRememberUser">Запомнить меня</label>
    </div>
    <div class="mt-3 align-self-center">
        <button class="btn btn-outline-light sign-in align-self-center" type="submit">Войти</button>
    </div>
    <a class="btn btn-block mt-3 btn-outline-info sign-in"  asp-action="Register" asp-controller="Account">Регистрация</a>
</form>
<script src="~/js/InputsValidation.js" asp-append-version="true"></script>
