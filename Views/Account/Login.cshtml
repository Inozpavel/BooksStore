@model BooksStore.Models.UserLogin
@{ 
    ViewBag.Title = "Вход в аккаунт";
}
<form method="post" class="form-signin text-center">
    <h1 class="h3 mb-3">Введите данные</h1>
    <div asp-validation-summary="All"></div>
    <div class="form-group">
        <input asp-for="Email" class="form-control" type="email" placeholder="Email" />
    </div>
    <div class="form-group">
        <input asp-for="Password" class="form-control" type="password" placeholder="Пароль" />
    </div>
    <div class="form-group">
        <label class="switch">
            <input type="checkbox" asp-for="ShouldRememberUser" class="success">
            <span class="slider round"></span>
        </label>
        <label asp-for="ShouldRememberUser" class="label-text-center">Запомнить меня</label>
    </div>

    <button class="btn btn-success form-control sign-in" type="submit">Войти</button>
    <a class="btn btn-block mt-3 sign-in" id="btn-registration" asp-action="Registration" asp-controller="Account">Регистрация</a>
</form>
<script src="~/js/InputsValidation.js" asp-append-version="true"></script>
